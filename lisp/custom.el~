(use-package dashboard
  :ensure t
  :config
  (setq dashboard-banner-logo-title "In solitude, where we are least alone.")
  (setq dashboard-startup-banner 'official) ;; ä¹Ÿå¯ä»¥è‡ªå®šä¹‰å›¾ç‰‡
  (setq dashboard-startupify-list '(dashboard-insert-banner
                                    dashboard-insert-newline
                                    dashboard-insert-banner-title
                                    dashboard-insert-newline
                                    dashboard-insert-navigator
                                    dashboard-insert-newline
                                    dashboard-insert-init-info
                                    dashboard-insert-items
                                    dashboard-insert-newline
                                    dashboard-insert-footer))

  (setq dashboard-navigator-buttons
      `((("1" "NA II" "Open" (lambda (&rest _) (dired "E:/DS/Numerical Algorithm II")))
         ("2" "DB" "Open" (lambda (&rest _) (dired "E:/DS/Database")))
         ("3" "ï¸Config" "Open Emacs Config" (lambda (&rest _) (dired "~/.emacs.d")))
         ("ğ„" "Music" "Listen to Some Music" (lambda (&rest _) (dired "ï¸~\Music")))
         )))
  (setq dashboard-items '((recents   . 20)
			              (projects  . 10)
			              (agenda    . 10) ;; org-agenda
                          (bookmarks . 5)
                          (registers . 5)))
  (setq dashboard-item-shortcuts '((recents   . "r")
				                   (projects  . "p")
				                   (agenda    . "a")
                                   (bookmarks . "m")                                  
                                   (registers . "e")))
  (setq dashboard-center-content t)
  (dashboard-setup-startup-hook))

